{
	"name": "octave-debug",
	"displayName": "octave-debug",
	"description": "Debug support for Octave",
	"version": "0.0.1",
	"publisher": "tianjiaohuang",
	"engines": {
		"vscode": "^1.18.0",
		"node": "^7.9.0"
	},
	"icon": "images/octave-debug-icon.png",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/gitletH/vscode-octave-debug.git"
	},
	"bugs": {
		"url": "https://github.com/gitletH/vscode-octave-debug/issues"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"vscode-debugadapter": "1.27.0",
		"vscode-debugprotocol": "1.27.0"
	},
	"devDependencies": {
		"@types/mocha": "2.2.48",
		"@types/node": "7.0.55",
		"mocha": "5.0.1",
		"tslint": "5.9.1",
		"typescript": "2.6.2",
		"vsce": "1.37.5",
		"vscode": "^1.1.18",
		"vscode-debugadapter-testsupport": "1.27.0"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug",
		"onCommand:extension.octave-debug.getProgramName"
	],
	"contributes": {
		"languages": [
			{
				"id": "octave",
				"aliases": [
					"matlab"
				],
				"extensions": [
					".m"
				]
			}
		],
		"breakpoints": [
			{
				"language": "octave"
			},
			{
				"language": "matlab"
			}
		],
		"debuggers": [
			{
				"type": "octave",
				"label": "Octave Debug",
				"program": "./out/DebugAdapter.js",
				"runtime": "node",
				"languages": [
					"octave",
					"matlab"
				],
				"enableBreakpointsFor": {
					"languageIds": [
						"octave",
						"matlab"
					]
				},
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "octave",
						"request": "launch",
						"name": "A hella awesome debugger by a good boy",
						"program": "${workspaceFolder}/${command:AskForProgramName}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "Octave Debug: Launch",
						"description": "A new configuration for 'debugging' a user selected octave file.",
						"body": {
							"type": "octave",
							"request": "launch",
							"name": "A hella awesome debugger by a good boy",
							"program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
							"stopOnEntry": true
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.octave-debug.getProgramName"
				}
			}
		]
	}
}
